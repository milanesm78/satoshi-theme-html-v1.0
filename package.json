{
  "name": "@webpixels/satoshi",
  "version": "1.0.0",
  "author": "Webpixels",
  "scripts": {
    "start": "run-p serve:eleventy watch:parcel",
    "serve:eleventy": "cross-env ELEVENTY_ENV=local eleventy --serve",
    "watch:parcel": "run-p watch:css watch:js",
    "watch:css": "parcel watch ./src/scss/*.scss --dist-dir ./dist/css",
    "watch:js": "parcel watch ./src/js/*.js --dist-dir ./dist/js",
    "build": "run-s clean build:parcel build:eleventy purge:css",
    "build:eleventy": "cross-env ELEVENTY_ENV=production eleventy",
    "build:parcel": "run-p build:css build:js",
    "build:css": "parcel build ./src/scss/*.scss --dist-dir ./build/css",
    "build:js": "parcel build ./src/js/*.js --dist-dir ./build/js",
    "purge:css": "purgecss --config ./purgecss.config.js --output build/css/",
    "dev": "run-s clean build:parcel dev:eleventy",
    "dev:eleventy": "cross-env ELEVENTY_ENV=development eleventy",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@11ty/eleventy": "2.0.1",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@parcel/transformer-sass": "^2.2.1",
    "@popperjs/core": "^2.11.2",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "eleventy-plugin-toc": "^1.1.5",
    "front-matter": "^4.0.2",
    "html-minifier": "^4.0.0",
    "install": "^0.13.0",
    "js-beautify": "^1.14.0",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-emoji": "^2.0.0",
    "npm": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "parcel": "^2.2.1",
    "postcss-obfuscator": "^1.6.0",
    "prismjs": "^1.29.0",
    "purgecss": "^5.0.0",
    "sass": "^1.49.0",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "@webpixels/css": "^2.0.0-beta.10",
    "apexcharts": "^3.33.0",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.0",
    "choices.js": "^10.1.0",
    "dayjs": "^1.11.6",
    "flatpickr": "^4.6.9"
  }
}
